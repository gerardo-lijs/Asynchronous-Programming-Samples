<Window x:Class="AsyncDesktopDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncDesktopDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300" ResizeMode="NoResize">

    <StackPanel Width="200" >
        <Label>Start number</Label>
        <TextBox x:Name="StartNumberTextBox" Margin="5" >1</TextBox>
        <Label>End number</Label>
        <TextBox x:Name="EndNumberTextBox" Margin="5">50000000</TextBox>

        <Button Click="Button_Click" Margin="5">Calculate prime numbers</Button>
        <TextBlock x:Name="ResultTextBlock" TextWrapping="Wrap" Margin="5" />
    </StackPanel>
</Window>
